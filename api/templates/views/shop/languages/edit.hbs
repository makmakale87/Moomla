<form id="adminForm" enctype="multipart/form-data" class="needs-validation">
    <div id="adminMooShop" class="card">
        {{>page_header}}
        <div class="card-body">
            <div class="form-group row">
                <label for="title" class="col-sm-2 col-form-label">Заголовок*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" id="title" value="{{form.title}}" placeholder="Заголовок" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="language" class="col-sm-2 col-form-label">Префикс*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="language" id="language" value="{{form.language}}" placeholder="Префикс" required>
                </div>
            </div>
        </div>
    </div>
</form>