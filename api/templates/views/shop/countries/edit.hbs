<form id="adminForm" enctype="multipart/form-data" class="needs-validation">
    <div id="adminMooShop" class="card">
        {{>page_header}}
        <div class="card-body">
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <label for="title" class="col-sm-2 col-form-label">Заголовок*</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="title" id="title" value="{{form.title}}" placeholder="Заголовок" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="country_code" class="col-sm-2 col-form-label">Код*</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="country_code" id="country_code" value="{{form.country_code}}" placeholder="Код" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="country_code_2" class="col-sm-2 col-form-label">Код 2*</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="country_code_2" id="country_code_2" value="{{form.country_code_2}}" placeholder="Код 2" required>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group row">
                        <label for="status" class="col-sm-3 col-form-label">Публикация</label>
                        <div class="col-sm-9">
                            {{#select form.status}}
                                <select name="status" id="status" class="form-control">
                                    <option value="public">Публиковать</option>
                                    <option value="unpublic">Не публиковать</option>
                                </select>
                            {{/select}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>