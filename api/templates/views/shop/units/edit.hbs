<form id="adminForm" enctype="multipart/form-data" class="needs-validation">
    <div id="adminMooShop" class="card">
        {{>page_header}}
        <div class="card-body">
            <div class="form-group row">
                <label for="title" class="col-sm-2 col-form-label">Заголовок*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" id="title" value="{{form.title}}" placeholder="Заголовок" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="qty" class="col-sm-2 col-form-label">Базовое количество*</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="qty" id="qty" value="{{#if form.qty}}{{form.qty}}{{else}}1{{/if}}" placeholder="Базовое количество" required>
                </div>
            </div>
        </div>
    </div>
</form>