<script>
    $( document ).ready( function() {
        bsCustomFileInput.init();
    } );

    $( '#deleteIMG' ).click( async () => {
        let response = await fetch( window.location.href, {
            method : 'delete'
        } );
        let result = await response.json();
        if ( result.deleted ) {
            location.reload();
        }
    } );

    function setDefault( id ) {
        $.post( '?task=setDefault', { id : id }, function( data ) {
            if ( data.updated ) {
                location.reload();
            }
        } );
    }
</script>